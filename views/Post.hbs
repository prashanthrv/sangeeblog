<div class="container-fluid" id="panel">
  <div class="row">
    <div class="col-md-12 mainBGRight">
      <div class="row navBar">
        <div class="postPageLogo">
          <a href="/">Sangeetha Kannan</a>
        </div>
        <div class="menuButton" id="sideMenu">
        </div>
        <div class="loginButton">
          Login
        </div>
      </div>
      <div class="row postPageHeader">
          <div class="col-md-8 col-md-offset-2">
            <div class="col-md-2" style="padding:0px;">
              <div class="row postAuthorPic">
              </div>
            </div>
            <div class="col-md-10" style="padding-left:30px;">
              <div class="row postPageTitle">
                {{post.postTitle}}
              </div>
              <div class="row postTime">
                {{time post.postCreated 'format'}}
              </div>
              <div class="row postTime">
                <a href="/category/{{post.Category.ID}}"><span class="catLink">{{post.Category.CategoryName}}</span></a>
              </div>
            </div>
          </div>
      </div>
      <div class="row postPageContent">
        <div class="col-md-8 col-md-offset-2">
          {{{post.Content}}}
        </div>
      </div>
    </div>
  </div>
</div>
